<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="300.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hufs.ces.digitalclock.DigitalClockController">
   <top>
      <Label fx:id="lblDate" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" textFill="GREEN" BorderPane.alignment="CENTER">
         <font>
            <Font name="Verdana Bold" size="30.0" />
         </font>
      </Label>
   </top>
   <center>
      <Label fx:id="lblTime" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" textAlignment="CENTER" textFill="BLUE" BorderPane.alignment="CENTER">
         <font>
            <Font name="Verdana Bold" size="36.0" />
         </font>
      </Label>
   </center>
   <bottom>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#startAction" prefHeight="50.0" text="Start" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
